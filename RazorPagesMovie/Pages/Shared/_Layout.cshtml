<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <style>
        body {
            padding-top: 65px;
        }

        /* Left Sidebar */
        .sidebar-left {
            position: fixed;
            top: 65px;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }

        /* Right Sidebar */
        .sidebar-right {
            position: fixed;
            top: 65px;
            right: 0;
            height: 100%;
            width: 250px;
            background-color: #f8f9fa;
            border-left: 1px solid #dee2e6;
            padding: 20px;
        }

        .sidebar .nav-link {
            color: #000;
        }

        .content {
            margin-left: 260px; /* Adjust for left sidebar */
            margin-right: 260px; /* Adjust for right sidebar */
            padding: 20px;
        }

        .sidebar .nav-link.active {
            background-color: #e9ecef;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <!-- Top Navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Homepage/Index">RITAS GROUP</a>
            </div>
        </nav>
    </header>

    <!-- Left Sidebar (Navigation) -->
    <div class="sidebar-left">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-muted" asp-area="" asp-page="/Homepage/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" asp-area="" asp-page="/Reserve/Index">All Reservations</a>
            </li>
            <li class="nav-item">

                <a class="nav-link text-muted" asp-area="" asp-page="/Reserve/Index" asp-route-handler="Upcoming">Upcoming Reservations</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" asp-area="" asp-page="/Reserve/Index" asp-route-handler="Finalized">Finalized Reservations</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" asp-area="" asp-page="/Rooms/Index">Rooms</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" asp-area="" asp-page="/Calender/CalenderView">Calender</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-muted" asp-area="" asp-page="/FoodData/Index">Foods</a>
            </li>
           
            <!-- Add more nav items as needed -->
        </ul>
    </div>

    <!-- Right Sidebar (Clickable Elements) -->
    <div class="sidebar-right">
        <h5>Quick Actions</h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-muted" href="#">Action 1</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" href="#">Action 2</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" href="#">Action 3</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" href="#">Action 4</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted" href="#">Action 5</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            Design & Developed Kavinda Gunathilake | 2024 <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
