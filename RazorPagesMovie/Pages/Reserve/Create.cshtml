<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Create Reservation</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.CustomerName" class="control-label"></label>
                                            <input asp-for="Reservations.CustomerName" class="form-control" />
                                            <span asp-validation-for="Reservations.CustomerName" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.NIN" class="control-label"></label>
                                            <input asp-for="Reservations.NIN" class="form-control" />
                                            <span asp-validation-for="Reservations.NIN" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.Address" class="control-label"></label>
                                            <input asp-for="Reservations.Address" class="form-control" />
                                            <span asp-validation-for="Reservations.Address" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.Country" class="control-label"></label>
                                            <input asp-for="Reservations.Country" class="form-control" />
                                            <span asp-validation-for="Reservations.Country" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.Mobile" class="control-label"></label>
                                            <input asp-for="Reservations.Mobile" class="form-control" />
                                            <span asp-validation-for="Reservations.Mobile" class="text-danger"></span>
                                        </div>
                                    </td>
                                   
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.GuestCount" class="control-label"></label>
                                            <input asp-for="Reservations.GuestCount" class="form-control" />
                                            <span asp-validation-for="Reservations.GuestCount" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                   
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.CheckInDate" class="control-label"></label>
                                            <input asp-for="Reservations.CheckInDate" class="form-control" />
                                            <span asp-validation-for="Reservations.CheckInDate" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.ExpectedCheckOutDate" class="control-label"></label>
                                            <input asp-for="Reservations.ExpectedCheckOutDate" class="form-control" />
                                            <span asp-validation-for="Reservations.ExpectedCheckOutDate" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                @* <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.ExpectedCheckOutDate" class="control-label"></label>
                                            <input asp-for="Reservations.ExpectedCheckOutDate" class="form-control" />
                                            <span asp-validation-for="Reservations.ExpectedCheckOutDate" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.GuestCount" class="control-label"></label>
                                            <input asp-for="Reservations.GuestCount" class="form-control" />
                                            <span asp-validation-for="Reservations.GuestCount" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                 <tr>
                                    <div>
                                        <div class="form-group">
                                            <label asp-for="Reservations.RealCheckOutDate" class="control-label"></label>
                                            <input asp-for="Reservations.RealCheckOutDate" class="form-control" />
                                            <span asp-validation-for="Reservations.RealCheckOutDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                     <div>
                                        <div class="form-group">
                                            <label asp-for="Reservations.RealCheckOutDate" class="control-label"></label>
                                            <input asp-for="Reservations.RealCheckOutDate" class="form-control" />
                                            <span asp-validation-for="Reservations.RealCheckOutDate" class="text-danger"></span>
                                        </div>
                                     </div>   
                                   
                                </tr> *@
                            </tbody>
                        </table>

                        <div class="form-group">
                            <label>Select Rooms:</label>
                            <div>
                                @if (Model.Rooms != null && Model.Rooms.Any())
                                {
                                    @foreach (var room in Model.Rooms)
                                    {
                                        <div class="card mb-3" style="cursor: pointer;" onclick="toggleCardDetails(@room.Id)">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <span>Room @room.RoomNo (@room.RoomType)</span>
                                                <input type="checkbox" class="form-check-input"
                                                       name="SelectedRoomIds"
                                                       value="@room.Id" />
                                            </div>
                                            <div class="card-body collapse" id="roomDetails-@room.Id">
                                                <p>Details about Room @room.RoomNo</p>
                                                <p>Room Type: @room.RoomType</p>
                                                <p>Price: $100</p>
                                                <!-- Additional room details can go here -->
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-warning">No vacant rooms available.</div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function toggleCardDetails(roomId) {
            var details = document.getElementById('roomDetails-' + roomId);
            if (details.classList.contains('collapse')) {
                details.classList.remove('collapse');
                details.classList.add('show');
            } else {
                details.classList.add('collapse');
                details.classList.remove('show');
            }
        }
    </script>
}