@page
@model RazorPagesMovie.Pages.Reserve.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card mb-2" id="headbox">
    <div class="card-body d-flex justify-content-center align-items-center mb-2">
        <h2 class="m-0">Update Reservation</h2>
    </div>
</div>


<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8" style="margin-bottom:30px">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5>Update Form</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Reservations.Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td colspan="2">
                                        <div class="form-group">
                                            <label class="control-label">Third-Party Booking</label>
                                            <div class="form-check form-switch">
                                                <input asp-for="Reservations.IsThirdPartyBooking"
                                                       class="form-check-input"
                                                       type="checkbox"
                                                       id="thirdPartyBooking"
                                                       onchange="toggleThirdPartyFields()" />
                                                <label class="form-check-label" for="thirdPartyBooking">Yes (No is default)</label>
                                            </div>
                                            <span asp-validation-for="Reservations.IsThirdPartyBooking" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr id="thirdPartyFields">
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.ThirdPartyHandlerId" class="control-label">Third Party Handler</label>
                                            <select asp-for="Reservations.ThirdPartyHandlerId" class="form-control">
                                                <option value="">Select Third Party</option>
                                                @foreach (var handler in Model.ThirdPartyHandlers)
                                                {
                                                    <option value="@handler.Id">@handler.CompanyName</option>
                                                }
                                            </select>
                                            <span asp-validation-for="Reservations.ThirdPartyHandlerId" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.BookingReference" class="control-label">Booking Reference</label>
                                            <input asp-for="Reservations.BookingReference" class="form-control" />
                                            <span asp-validation-for="Reservations.BookingReference" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                              
                                <!-- Reservation Details Form Fields -->
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.CustomerName" class="control-label"></label>
                                            <input asp-for="Reservations.CustomerName" class="form-control" required />
                                            <span asp-validation-for="Reservations.CustomerName" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.NIN" class="control-label"></label>
                                            <input asp-for="Reservations.NIN" class="form-control" required />
                                            <span asp-validation-for="Reservations.NIN" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.Address" class="control-label"></label>
                                            <input asp-for="Reservations.Address" class="form-control" required />
                                            <span asp-validation-for="Reservations.Address" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.Country" class="control-label"></label>
                                            <input asp-for="Reservations.Country" class="form-control" required />
                                            <span asp-validation-for="Reservations.Country" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.Mobile" class="control-label"></label>
                                            <input asp-for="Reservations.Mobile" class="form-control" required />
                                            <span asp-validation-for="Reservations.Mobile" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.GuestCount" class="control-label"></label>
                                            <input asp-for="Reservations.GuestCount" class="form-control" type="number" min="1" required />
                                            <span asp-validation-for="Reservations.GuestCount" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.CheckInDate" class="control-label"></label>
                                            <input asp-for="Reservations.CheckInDate" class="form-control" type="date" required id="checkInDate" name="checkInDate" />
                                            <span asp-validation-for="Reservations.CheckInDate" class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Reservations.ExpectedCheckOutDate" class="control-label"></label>
                                            <input asp-for="Reservations.ExpectedCheckOutDate" class="form-control" type="date" required id="checkOutDate" name="checkOutDate" />
                                            <span asp-validation-for="Reservations.ExpectedCheckOutDate" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Check Availability Form -->
                        <div class="form-group">
                            <button type="button" onclick="checkAvailability()" class="btn btn-warning">Check Availability</button>
                        </div>

                        <h4 style="margin-top:20px">Available Rooms</h4>
                        <div id="availableRooms">
                            <p>Select check-in and check-out dates to see available rooms.</p>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success btn-block" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
<div id="loadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(255, 255, 255, 0.8); z-index:1000; text-align:center;">
    <img src="~/loading.gif" alt="Loading..." style="margin-top:20%; width:100px; height:auto;" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function toggleCardDetails(roomId) {
            var details = document.getElementById('roomDetails-' + roomId);
            if (details.classList.contains('collapse')) {
                details.classList.remove('collapse');
                details.classList.add('show');
            } else {
                details.classList.add('collapse');
                details.classList.remove('show');
            }
        }


        function getReservationIdFromUrl() {
            // Get the query string from the URL
            var urlParams = new URLSearchParams(window.location.search);
            // Extract the 'id' parameter (reservationId)
            return urlParams.get('id');
        }

        function checkAvailability() {
            var reservationId = getReservationIdFromUrl(); // Fetch from URL
            var checkInDate = document.getElementById('checkInDate').value;
            var checkOutDate = document.getElementById('checkOutDate').value;

            // Get the previously selected room IDs
            var selectedRoomIds = $('input[name="SelectedRoomIds"]:checked').map(function () {
                return $(this).val();
            }).get();

            if (checkInDate && checkOutDate) {
                showLoader();
                $.ajax({
                    url: '/Reserve/Edit?handler=AvailableRooms',
                    type: 'GET',
                    data: {
                        checkInDate: new Date(checkInDate).toISOString(),
                        checkOutDate: new Date(checkOutDate).toISOString(),
                        selectedRoomIds: selectedRoomIds.join(','),
                        reservationId: reservationId // Pass reservationId here
                    },
                    success: function (result) {
                        hideLoader();
                        $('#availableRooms').html(result);
                      
                    },
                    error: function () {
                        hideLoader();
                        alert("Error fetching available rooms.");
                      
                    }
                });
            } else {
                alert("Please select both check-in and check-out dates.");
            }
        }

        function showLoader() {
            $("#loadingOverlay").show(); // Show the loader
        }

        function hideLoader() {
            $("#loadingOverlay").hide(); // Hide the loader
        }

        $(document).ready(function () {
            // Show loader on form submission
            $("form").on("submit", function () {
                showLoader(); // Show loader when any form is submitted
            });
        });


        $(document).ready(function () {
            // Check if the Third-Party Booking checkbox is checked on page load
            toggleThirdPartyFields(); // Call this function to handle the initial state
        });

        function toggleThirdPartyFields() {
            var thirdPartyBooking = document.getElementById('thirdPartyBooking').checked;
            var thirdPartyFields = document.getElementById('thirdPartyFields');
            if (thirdPartyBooking) {
                thirdPartyFields.style.display = "table-row"; // Show the third-party fields
            } else {
                thirdPartyFields.style.display = "none"; // Hide the third-party fields
            }
        }

    </script>
}
