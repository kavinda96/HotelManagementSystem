@model Dictionary<string, List<RazorPagesMovie.Models.Room>>

@{
    // Mapping of room type IDs to room type names
    var roomTypeNames = new Dictionary<string, string>
    {
        { "1", "Deluxe Double" },
        { "2", "Deluxe Triple" },
        { "3", "Superior Double" },
        { "4", "Superior Triple" }
    };
}

@foreach (var roomTypeGroup in Model)
{
    <h5>@roomTypeNames[roomTypeGroup.Key] Rooms</h5> <!-- Use the mapped name -->
    <div class="row">
        @foreach (var room in roomTypeGroup.Value)
        {
            <div class="col-md-3 mb-4">
                <div class="card room-tile">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        Room @room.RoomNo
                        <!-- Larger checkbox next to room number -->
                        <input type="checkbox" name="SelectedRoomIds" value="@room.Id"
                               style="transform: scale(1.5); margin-left: 10px;" /> <!-- Increase size with scale -->
                    </div>
                    <div class="card-body">
                        <p>Price: @room.Price</p>
                        <p>Beds Count: @room.BedsCount</p> <!-- Display beds count under price -->
                    </div>
                </div>
            </div>
        }
    </div>
}
