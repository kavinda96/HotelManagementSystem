@page
@model RazorPagesMovie.Pages.Homepage.IndexModel
@{
}
<div class="card mb-2" id="headbox">
    <div class="card-body d-flex justify-content-center align-items-center mb-2">
        <h2 class="m-0">KEEPER: The Hotel Management Dashboard</h2>
    </div>
</div>


<div class="container mt-5">
    
   
    <div class="row text-center mb-4">
        <div class="col">
         @*    <h1>Hotel Management Dashboard</h1> *@
            <p class="lead">Welcome to the hotel management system. Here you can manage reservations, check-ins, and check-outs.</p>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Reservations</h5>
                    <p class="card-text display-4">@Model.DashboardData.TotalReservation</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Reservations</h5>
                    <p class="card-text display-4">@Model.DashboardData.UpcomingReservation</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Reservations</h5>
                    <p class="card-text display-4">@Model.DashboardData.ActiveReservation</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Rooms</h5>
                    <p class="card-text display-4">@Model.TotalReservations</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Vacant Rooms for Today</h5>
                    <p class="card-text display-4">@Model.TotalReservations</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Vacant Rooms for Today</h5>
                    <p class="card-text display-4">@Model.TotalReservations</p>
                </div>
            </div>
        </div>


    </div>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <a asp-page="/Reserve/Create" class="btn btn-success btn-lg btn-block">Make a Reservation</a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-page="/Availability/Index" class="btn btn-warning btn-lg btn-block">Check Availability</a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-page="/Reserve/Index" class="btn btn-danger btn-lg btn-block">Reservations List</a>
        </div>
    </div>
</div>


